@page "/"
@namespace ThemesOfDotNet.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Themes of .NET</title>
    <base href="~/" />
    <link rel="icon" type="image/png" href="favicon.png">
    <link href="~/css/themesof.net.bundle.css" media="(prefers-color-scheme: light)" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/themesof.net.bundle-dark.css" media="(prefers-color-scheme: dark)" rel="stylesheet" asp-append-version="true" />
    <meta name="description" content="Tracking Themes, Epics, User stories and Issues for the next phase of .NET runtime development" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="/" class="reload" rel="nofollow">Reload</a>
        <a href="#" class="dismiss" rel="nofollow">🗙</a>
    </div>

    <script src="_framework/blazor.server.js" async></script>
    <script src="~/js/themesof.net.bundle.js" async asp-append-version="true"></script>
</body>
</html>
